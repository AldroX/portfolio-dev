---
import Badge from "@components/Badge.astro";
import SocialContainer from "@components/SocialContainer.astro";
import LinkedIn from "@icons/LinkedIn.astro";
import GitHub from "@icons/GitHub.astro";
import Mails from "@icons/Mails.astro";
import Experience from "@components/Experience.astro";
import Briefcase from "@icons/Briefcase.astro";
import SectionContainer from "@components/SectionContainer.astro";
import Code from "@icons/Code.astro";
import Projects from "@components/Projects.astro";
import About from "@components/About.astro";
import User from "@icons/User.astro";
import Carusel from "@components/Carusel.astro";
---

<main class="">
  <SectionContainer class="py-44 pb-32 w-full mx-auto container">
    <div class="">
      <Badge>Disponible para trabajar</Badge>
    </div>
    <div class="flex justify-center flex-col">
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola, Soy Alejandro Yero
      </h1>
      <p
        class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-blue-400 [&>strong]:text-blue-500 [&>strong]:font-medium dark:text-gray-300"
      >
        <strong class="text-blue-500 opacity-80"
          >Ingeniero en Ciencias Informáticas</strong
        > con más de 2 años de experiencia en desarrollo frontend, diseñando soluciones
        que mejoran la eficiencia y optimizan la gestión de procesos.
      </p>
      <nav class="flex flex-wrap gap-4 mt-8">
        <SocialContainer href="/">
          <LinkedIn class="size-4 md:size-6" />
          LinkedIn
        </SocialContainer>
        <SocialContainer href="/">
          <GitHub class="size-4 md:size-6" />
          GitHub
        </SocialContainer>
        <SocialContainer href="/">
          <Mails class="size-4 md:size-6" />
          alejandroyero925@gmail.com
        </SocialContainer>
      </nav>
    </div>
    <Carusel />
  </SectionContainer>
  <SectionContainer id="experiencia">
    <h2 class="text-4xl font-semibold mb-6 flex gap-x-3 items-center">
      <Briefcase class="size-9" />
      Experiencia Laboral
    </h2>
    <Experience />
  </SectionContainer>

  <SectionContainer id="proyecto">
    <h2 class="text-4xl font-semibold mb-10 flex gap-x-3 items-center">
      <Code class="size-9" />
      Proyectos
    </h2>
    <Projects />
  </SectionContainer>
  <SectionContainer id="sobre-mi">
    <h2 class="text-4xl font-semibold mb-10 flex gap-x-3 items-center">
      <User class="size-9" />
      Sobre mí
    </h2>
    <About />
  </SectionContainer>
</main>
